{% extends "baseBack.html.twig" %}

{% block title %}Modifier{% endblock %}


{% block body %}
    <div class="row my-5"> 
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        Modifier une commande
                    </h3>
                </div>
                {{form_start(form,{'attr':{'novalidate':'novalidate'}})}}
  <div class=" alert alert-danger"> {{form_errors(form.status)}} </div>
                <div class="card-body">
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}